<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="integral"
            type="com.example.mvvm_wan_kot.model.bean.IntegralBean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp"
            android:id="@+id/integral"
            android:text="@{String.valueOf(integral.coinCount)}"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/integralLevel"
            android:text='@{"等级："+integral.level}'
            android:layout_marginTop="20dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/integral"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/integralRank"
            android:text='@{"排名："+integral.rank}'
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/integralLevel"
            app:layout_goneMarginTop="10dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/integral_rank"
            android:textSize="12sp"
            android:padding="3dp"
            android:textColor="@color/textColorPrimary"
            android:id="@+id/integralGoRank"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_bg_tag"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>