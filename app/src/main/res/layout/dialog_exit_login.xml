<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/textColorPrimary"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="是否退出登录？"
        android:id="@+id/exitLoginTitle"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/exitLoginV1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exitLoginTitle"
        android:layout_marginTop="20dp"
        android:background="@color/grayDark"/>
    <TextView
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/exitLoginConfirm"
        android:text="@string/confirm"
        android:textSize="13sp"
        android:textColor="@color/main_select_color"
        app:layout_constraintTop_toBottomOf="@+id/exitLoginV1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/exitLoginV2"
        />
    <View
        android:layout_width="1dp"
        android:id="@+id/exitLoginV2"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/exitLoginV1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/grayDark"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/exitLoginCancel"
        android:text="@string/cancel"
        android:textSize="13sp"
        android:textColor="@color/main_select_color"
        app:layout_constraintTop_toBottomOf="@+id/exitLoginV1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/exitLoginV2"
        />
</androidx.constraintlayout.widget.ConstraintLayout>