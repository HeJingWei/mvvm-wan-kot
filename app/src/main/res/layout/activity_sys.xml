<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/homeTabLayout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/bgColorPrimary"
        android:elevation="2dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/main_select_color"
        app:tabMode="auto"
        app:tabTextAppearance="@style/MyTabLayoutText"
        app:tabSelectedTextColor="@color/main_select_color"
        app:tabTextColor="@color/textColorThird" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/systemDetailViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>