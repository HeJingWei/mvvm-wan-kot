<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="article"
            type="com.example.mvvm_wan_kot.model.bean.Article" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:elevation="2dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textColorPrimary"
            android:id="@+id/collectChapterName"
            android:text="@{article.chapterName}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/textColorPrimary"
            android:id="@+id/collectTitle"
            android:layout_marginTop="6dp"
            android:text="@{article.title}"
            app:layout_constraintTop_toBottomOf="@+id/collectChapterName"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textColorPrimary"
            android:id="@+id/collectDesc"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/collectTitle"
            android:text="@{article.desc}"
            android:maxLines="3"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collectDate"
            android:text="@{article.niceDate}"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:textColor="@color/textColorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/collectDesc"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textColorThird"
            android:id="@+id/collectCancel"
            android:clickable="true"
            android:text="@string/collect_cancel"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_bg_tag"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>