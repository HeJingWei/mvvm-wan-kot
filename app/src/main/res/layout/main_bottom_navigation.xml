<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/system"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center_horizontal"
        android:paddingTop="6dp"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/fragment_home"
            android:id="@+id/homeIcon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:text="首页"
            android:id="@+id/homeTv"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/system"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/home"
        app:layout_constraintRight_toLeftOf="@+id/navigation"
        android:gravity="center_horizontal"
        android:paddingTop="6dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/systemIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/fragment_system" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:text="体系"
            android:id="@+id/systemTv"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/navigation"
        android:paddingTop="6dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/system"
        app:layout_constraintRight_toLeftOf="@+id/mine"
        app:layout_constraintHorizontal_weight="1"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/fragment_navigation"
            android:id="@+id/navigationIcon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:text="导航"
            android:id="@+id/navigationTv"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/mine"
        android:paddingTop="6dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/navigation"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/fragment_mine"
            android:id="@+id/mineIcon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:text="我的"
            android:id="@+id/mineTv"
            />
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>